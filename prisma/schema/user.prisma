model User {
  id       String     @id @default(uuid())
  email    String     @unique
  password String
  role     Role       @default(USER)
  status   UserStatus @default(ACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile Profile?
  events  Event[]  @relation("HostEvents")

  reviewsGiven Review[] @relation("UserGivenReviews")
  reviews      Review[] @relation("HostReceivedReviews")

  participants Participant[]

  paymentsMade     Payment[] @relation("UserPayments")
  paymentsReceived Payment[] @relation("HostPayments")
}
