model User {
  id               String        @id @default(uuid())
  email            String        @unique
  password         String
  role             Role          @default(USER)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  status           UserStatus    @default(ACTIVE)
  events           Event[]       @relation("HostEvents")
  hostRequests     HostRequest?
  participants     Participant[]
  paymentsReceived Payment[]     @relation("HostPayments")
  paymentsMade     Payment[]     @relation("UserPayments")
  profile          Profile?
  reviews          Review[]      @relation("HostReceivedReviews")
  reviewsGiven     Review[]      @relation("UserGivenReviews")
  savedEvents      SavedEvent[]
}

model HostRequest {
  id        String            @id @default(uuid())
  userId    String            @unique
  status    HostRequestStatus @default(PENDING)
  createdAt DateTime          @default(now())
  user      User              @relation(fields: [userId], references: [id])
}
