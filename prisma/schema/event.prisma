model Event {
  id               String        @id @default(cuid())
  title            String
  type             String
  description      String
  date             DateTime
  location         String
  image            String

  minParticipants  Int           @default(1)
  maxParticipants  Int
  joiningFee       Int           @default(0)

  status           EventStatus   @default(OPEN)

  hostId           String
  host             User          @relation("HostEvents", fields: [hostId], references: [id])

  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}